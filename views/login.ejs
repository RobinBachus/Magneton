					<a href="pokedexlist.html">Pokémon List</a>
					<a href="pokelist.html">Catch List</a>
					<a target="_blank" href="battler.html">Battler</a>
					<a target="_blank" href="catcher.html">Catcher</a>
					<a href="quiz.html">Who's that pokémon?</a>
					<a href="comparator.html">Vergelijker</a>
					<a
						target="_blank"
						href="./assets/videos/welcomescreen.mp4"
					></a>
				</nav>
			</section>
		</aside>
		<main class="login-container">
			<!-- TODO: make the action the js function again -->
			<form class="login-form action-login framed" action="login" method="post">
				<h2>Welkom terug!</h2>
				<label
					><i class="fa-solid fa-envelope"></i>
					<input
						type="email"
						name="email"
						id="login-email"
						placeholder="someone@example.com"
						aria-label="email"
						value=""
						required
					/>
				</label>
				<label>
					<i class="fa-solid fa-lock"></i>
					<input
						type="password"
						name="password"
						id="login-password"
						placeholder="Wachtwoord"
						aria-label="Wachtwoord"
						minlength="8"
						required
					/>
				</label>
				<section class="login-submit-container">
					<input type="submit" value="Sign in" />
					<a href="signup">Maak een account</a>
				</section>
			</form>
		</main>
		<%- include("partials/footer") %>
	</body>
</html>
